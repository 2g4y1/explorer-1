{
    "name": "explorer-bot",
    "description": "Discord Bot for Tangle Explorer",
    "version": "1.0.0",
    "author": "Martyn Janes <martyn.janes@iota.org>",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/explorer.git/tree/master/discord-bot"
    },
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-lint": "eslint src --ext .tsx,.ts",
        "build-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build": "npm-run-all build-clean build-compile build-lint build-config",
        "serve-mon": "nodemon ./dist/index",
        "start-dev": "run-p serve-mon build-watch",
        "start": "node ./dist/index"
    },
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "discord.js": "^12.5.3",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@types/node": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "copyfiles": "^2.4.1",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsdoc": "^36.1.0",
        "eslint-plugin-unicorn": "^36.0.0",
        "nodemon": "^2.0.12",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.4.3"
    }
}
