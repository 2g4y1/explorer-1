{
    "name": "explorer-api",
    "description": "API for Tangle Explorer",
    "version": "1.0.0",
    "author": "Martyn Janes <martyn.janes@iota.org>",
    "repository": {
        "type": "git",
        "url": "https://github.com/iotaledger/explorer.git/tree/master/api"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "build-clean": "rimraf ./dist/*",
        "build-compile": "tsc",
        "build-watch": "tsc --watch",
        "build-lint": "eslint src --ext .tsx,.ts",
        "build-config": "copyfiles -u 2 ./src/data/config*.json ./dist/data/",
        "build": "npm-run-all build-clean build-compile build-lint build-config",
        "serve-mon": "nodemon ./dist/index",
        "start-dev": "run-p serve-mon build-watch",
        "start": "node ./dist/index"
    },
    "engines": {
        "node": "10.x.x"
    },
    "dependencies": {
        "@iota/core": "^1.0.0-beta.29",
        "@iota/transaction-converter": "^1.0.0-beta.23",
        "@iota/validators": "^1.0.0-beta.23",
        "aws-sdk": "^2.714.2",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "cron": "^1.8.2",
        "express": "^4.17.1",
        "node-fetch": "^2.6.0",
        "socket.io": "^2.3.0",
        "zeromq": "^6.0.0-beta.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.6",
        "@types/cron": "^1.7.2",
        "@types/express": "^4.17.7",
        "@types/node": "^14.0.23",
        "@types/socket.io": "^2.1.8",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "copyfiles": "^2.3.0",
        "eslint": "^7.4.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsdoc": "^29.2.0",
        "eslint-plugin-unicorn": "^20.1.0",
        "husky": "^4.2.5",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^3.9.7"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run build-lint"
        }
    }
}
